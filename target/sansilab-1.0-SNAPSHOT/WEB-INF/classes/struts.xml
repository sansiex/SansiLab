<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.action.excludePattern" value="" />
	<constant name="struts.action.extension" value="," />
	<constant name="struts.custom.i18n.resources" value="messages" />
    <!-- 开发模式下使用,这样可以打印出更详细的错误信息
    <constant name="struts.devMode" value="true" />
    -->
    <package name="page" extends="struts-default" namespace="/page">
        <action name="page" class="com.dianping.sansi.sansilab.action.PageAction" method="redirect">
            <result name="redirect" type="redirect">/page/${forward}.jsp</result>
        </action>
    </package>

    <package name="test" extends="json-default" namespace="/test">
        <action name="broadcast" class="com.dianping.sansi.sansilab.action.TestAction" method="broadcast">
            <result type="json"/>
        </action>
    </package>

    <package name="file" extends="json-default" namespace="/file">
        <action name="listDir" class="com.dianping.sansi.sansilab.action.FileAction" method="listDir">
            <result type="json"/>
        </action>

        <action name="listRoots" class="com.dianping.sansi.sansilab.action.FileAction" method="listRoots">
            <result type="json"/>
        </action>
    </package>
</struts>
 	